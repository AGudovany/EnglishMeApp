<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/background_color" tools:context=".PaymentsListActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payDate"
            android:background="@drawable/shape"
            android:textColor="@android:color/black" android:layout_weight="0.04"
            android:height="20dp" android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" android:layout_marginBottom="20dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/sum_payments"
              android:background="@drawable/shape" android:textColor="@android:color/black" android:layout_weight="0.04"
              android:height="20dp" android:layout_gravity="right" android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"/>
    <ListView android:id="@android:id/list"
              android:layout_width="fill_parent"
              android:background="@color/background_color"
              android:layout_height="fill_parent" android:divider="@android:color/darker_gray" android:dividerHeight="0.1dp"
              android:drawSelectorOnTop="true" android:layout_weight="0.85"/>
</LinearLayout>

